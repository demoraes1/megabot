{
  "name": "megabot-final",
  "version": "1.0.0",
  "description": "Electron application with Tailwind CSS",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-css": "tailwindcss -i ./src/renderer/input.css -o ./src/renderer/tailwind-compiled.css --watch",
    "build-css-prod": "tailwindcss -i ./src/renderer/input.css -o ./src/renderer/tailwind-compiled.css --minify"
  },
  "keywords": [
    "electron",
    "desktop",
    "app",
    "tailwindcss"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.yourcompany.megabot-final",
    "productName": "MegaBot Final",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "rebrowser-puppeteer": "^24.8.1",
    "systeminformation": "^5.27.8"
  }
}
